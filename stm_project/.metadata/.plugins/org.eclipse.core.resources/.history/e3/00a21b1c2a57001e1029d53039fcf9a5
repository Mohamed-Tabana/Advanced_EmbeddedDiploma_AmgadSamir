#ifndef I2C_INTERFACE_H_
#define I2C_INTERFACE_H_

#include "DMA_int.h"
#include "I2C_prv.h"
#include "stdint.h"
#include "STM32F446xx.h"
#include "Utils.h"


typedef enum {
	I2C_CR1_Peripheral_Disable=0,                // Peripheral Enable: Enabled
	I2C_CR1_Peripheral_Enable=1,           // Peripheral Enable: Disabled
} I2C_Peripheral_Enable;

typedef enum {
    I2C_CR1_SMBUS_I2C = 0,             // SMBus Mode: I2C
    I2C_CR1_SMBUS_SMBus,               // SMBus Mode: SMBus
} I2C_SMBus_Mode;

typedef enum {
    I2C_CR1_SMBTYPE_Device = 0,        // SMBus Type: Device
    I2C_CR1_SMBTYPE_Host,              // SMBus Type: Host
} I2C_SMBTYPE;

typedef enum {
    I2C_CR1_ENARP_Disabled = 0,        // ARP Enable: Disabled
    I2C_CR1_ENARP_Enabled,             // ARP Enable: Enabled
} I2C_ARP_Enable;

typedef enum {
    I2C_CR1_ENPEC_Disabled = 0,        // PEC Enable: Disabled
    I2C_CR1_ENPEC_Enabled,             // PEC Enable: Enabled
} I2C_PEC_Enable;
typedef enum {
    I2C_CR1_ENGC_Disabled = 0,         // General Call Enable: Disabled
    I2C_CR1_ENGC_Enabled,              // General Call Enable: Enabled
} I2C_General_Call_Enable;

typedef enum {
    I2C_CLK_STRETCH_Enabled = 0,     // Clock Stretching Disable (Slave mode): Enabled
    I2C_CLK_STRETCH_Disabled,        // Clock Stretching Disable (Slave mode): Disabled
} I2C_STRETCH_Enable;

typedef enum {
    I2C_CR1_START_NoStart = 0,         // Start Generation: No Start
    I2C_CR1_START_Start,               // Start Generation: Start
} I2C_START_Generation;

typedef enum {
    I2C_CR1_STOP_NoStop = 0,           // Stop Generation: No Stop
    I2C_CR1_STOP_Stop,                 // Stop Generation: Stop
} I2C_STOP_Generation;

typedef enum {
    I2C_CR1_ACK_Disabled = 0,          // Acknowledge Enable: Disabled
    I2C_CR1_ACK_Enabled,               // Acknowledge Enable: Enabled
} I2C_ACK_Enable;

typedef enum {
    I2C_CR1_POS_Current = 0,           // Acknowledge/PEC Position: Current
    I2C_CR1_POS_Next,                  // Acknowledge/PEC Position: Next
} I2C_POS_Options;

typedef enum {
    I2C_CR1_PEC_Disabled = 0,          // Packet Error Checking: Disabled
    I2C_CR1_PEC_Enabled,               // Packet Error Checking: Enabled
} I2C_PEC_Options;

typedef enum {
    I2C_CR1_ALERT_NoAlert = 0,         // SMBus Alert: No Alert
    I2C_CR1_ALERT_Alert,               // SMBus Alert: Alert
} I2C_ALERT_Options;

typedef enum {
    I2C_CR1_SWRST_NotUnderReset = 0,   // Software Reset: Not under reset state
    I2C_CR1_SWRST_UnderReset,          // Software Reset: Under reset state
} I2C_SWRESET;




#endif
